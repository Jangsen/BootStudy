{{>layouts/header}}
{{#member}}
    <form class="container" action="/members/update" method="post">        <!-- action 속성 값 삭제 -->
        <input name="id" type="hidden" value="{{id}}">
        <div class="mb-3">
            <label class="form-label">제목</label>
            <input type="text" class="form-control" name="email" value="{{email}}">   <!-- DTO의 title 필드와 연결 -->
        </div>
        <div class="mb-3">
            <label class="from-label">내용</label>
            <textarea class="form-control" rows="3" name="password">{{password}}</textarea>      <!-- DTO의 content 필드와 연결 -->
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/members/{{id}}">Back</a>
    </form>
{{/member}}
{{>layouts/footer}}